<h1><%= @restaurant.name %> </h1>
<p><%= @restaurant.address %></p> 

<p> <%= link_to "Edit restaurant", edit_restaurant_path(@restaurant) %> </p>
<p> <%= link_to "Back to restaurant list", restaurants_path %> </p>

<%= link_to "Delete #{@restaurant.name}",
            restaurant_path(@restaurant),
            method: :delete,
            data: { confirm: "Are you sure?" } %>



<%= link_to 'Edit', edit_restaurant_path(@restaurant) %> |
<%= link_to 'Back', restaurants_path %> |
<%= link_to 'Leave a review', new_restaurant_review_path(@restaurant) %>

<ul class="list-group">
  <% @restaurant.reviews.each do |review| %>
    <li class="list-group-item"><%= review.content %></li>
  <% end %>
</ul>